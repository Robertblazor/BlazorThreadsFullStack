@page "/"
@inject NavigationManager navManager
@attribute [Authorize]
@inject AuthenticationStateProvider authProvider
@inject IUserCollection userData
<PageTitle>Threads Reference Page for CNC shops</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<div class="container-fluid"><h1 class="page-heading text-center">Welcome to the front desk of thread information</h1></div>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card">
                <img src="/images/MetricExternalPNG.PNG" alt="Metric External Thread" class="card-img-top">
                <div class="card-body">
                    <h3>Metric External Thread Info Per ISO</h3>
                    <button class="btn btn-info btn-outline-success col-12" @onclick="()=>OpenMetricExternalPage()">Details</button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card">
                <img src="/images/MetricInternalPNG.PNG" alt="Metric Internal Thread" class="card-img-top">
                <div class="card-body">
                    <h3>Metric Internal Thread Info Per ISO</h3>
                    <button class="btn btn-info btn-outline-success col-12"  @onclick="()=>OpenMetricInternalPage()">Details</button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card">
                <img src="/images/StandardExternalPNG.PNG" alt="Standard External Thread" class="card-img-top">
                <div class="card-body">
                <h3>Standard External Thread Info Per ANSI</h3>               
                <button class="btn btn-info btn-outline-success col-12" @onclick="()=>OpenStandardExternalPage()">Details</button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card">
                <img src="/images/StandardInternalPNG.PNG" alt="Standard Internal Thread" class="card-img-top">
                <div class="card-body">
                <h3>Standard Internal Thread Info Per ANSI</h3>            
                <button class="btn btn-info btn-outline-success col-12" @onclick="()=>OpenStandardInternalPage()">Details</button>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    private UserModel loggedInUser;
    protected async override Task OnInitializedAsync()
    {
        loggedInUser = await authProvider.GetUserFromAuthAsync(userData);
    }
    private void OpenMetricExternalPage()
    {
        navManager.NavigateTo("/metricexternal");
    }
    private void OpenMetricInternalPage()
    {
        navManager.NavigateTo("/metricinternal");
    }
    private void OpenStandardExternalPage()
    {
        navManager.NavigateTo("/standardexternal");
    }
    private void OpenStandardInternalPage()
    {
        navManager.NavigateTo("/standardinternal");
    }
}